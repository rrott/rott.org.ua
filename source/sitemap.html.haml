!!! 5

%html
  %head
    %title=site.sitemap.title
    = partial 'partials/meta'

    %meta{ name: 'keywords',    content: site.sitemap.keywords }
    %meta{ name: 'description', content: site.sitemap.description }
    = stylesheet_link_tag 'index', property: 'stylesheet'
    = stylesheet_link_tag 'application', property: 'stylesheet'

  %body
    %main
      %section.content.center
        %h1.center.content-subhead
          Sitemap of rrott.com website
        .center
          .img-responsive.logo
            = partial('images/rrott-ruby-logo.svg').to_s
        .ribbon
          .div
            %h3 Blog Posts
            - blog.articles.each do |page|
              %a{ href: page_url(page), title: "Blog's #{page.url} page" }= page.url
              %br

          .div
            %h3 Portfolio
            - sitemap.resources.select { |page| page.path =~ /portfolio.*\.html/ }.each do |page|
              %a{ href: page_url(page), title: "Portfolio #{page.url} page" }= page.url
              %br
          .div
            %h3 Other pages on website
            %a{ href: '/', title: 'Home Page' } home page
            %br
            %a{ href: '/sitemap/', title: 'Site Map' } SiteMap
            %br
            %a{ href: '/resume/', title: 'Download CV and resume' } resume and CV
            %br
            %a{ href: '/sitemap.xml', title: 'sitemap.xml' } sitemap.xml
            %br
            %a{ download: "rrott-ruby-logo.svg", href: "/images/rrott-ruby-logo.svg", title: "rrott logo"} logo
            %br

