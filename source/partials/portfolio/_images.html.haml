- image= project.images.first
- show_link= project.images.length > 1
- url= show_link ? image.url + '.png' : 'javascript:void(0)'
%a{ href: "#{url}", title: image.title }
  %picture.large-img.-responsive{ 'data-index': 0 }
    %source{ media: "(max-width: 24em)",  srcset: "#{image.url}-336.jpg  1x, #{image.url}-768.jpg  2x" }
    %source{ media: "(max-width: 48em)",  srcset: "#{image.url}-768.jpg  1x, #{image.url}-1024.jpg 2x" }
    %source{ media: "(max-width: 64em)",  srcset: "#{image.url}-336.jpg  1x, #{image.url}-768.jpg  2x" }
    %source{ media: "(max-width: 112em)", srcset: "#{image.url}-768.jpg  1x, #{image.url}-1024.jpg 2x" }
    %source{ media: "(min-width: 112em)", srcset: "#{image.url}-1024.jpg 1x, #{image.url}-2048.jpg 2x" }
    %img.large-img.responsive.project-img{ 'data-index': 0, alt: image.title, src: "#{image.url}-336.jpg", srcset: "#{image.url}-336.jpg 336w, #{image.url}-768.jpg 768w, #{image.url}-1024.jpg 1024w, #{image.url}-2048.jpg 2048w ", sizes: "(max-width: 48em) 100vw, 33vw" }/
.center.thumbs.wrap.justify-center
  - if show_link
    - project.images.each_with_index do |img, index|
      %a.thumb{ href: "#{img.url}.png", title: img.title }
        %img{ src: "#{img.url}-thumb.jpg", alt: "Screenshot of #{img.title}", 'data-index': index }/
- if project.info
  .post-image-meta
    #{project.info}
