.posts{ id: "#{projects.id_name}" }
  - if multipart
    %h3.content-subhead
      #{projects.title}
  - projects.projects.each do |project|
    %section.post{ id: project.name }
      - if project.noindex
        %noindex
          = partial 'partials/portfolio/project', locals: { project: projects_list[project.name], index: project.noindex }
      - else
        = partial 'partials/portfolio/project', locals: { project: projects_list[project.name], index: false }

